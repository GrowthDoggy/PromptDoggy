            <li>
              <a href="<%= project_environments_path(@project) %>" class="group flex gap-x-3 rounded-md p-2 text-sm font-semibold leading-6 <%= active_link?(controllers: 'environments') ? 'bg-gray-50 text-indigo-600' : 'text-gray-700 hover:text-indigo-600 hover:bg-gray-50' %>">
                <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="h-6 w-6 shrink-0 <%= active_link?(controllers: 'environments') ? 'text-indigo-600' : 'text-gray-700 group-hover:text-indigo-600' %>">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M2.25 15a4.5 4.5 0 0 0 4.5 4.5H18a3.75 3.75 0 0 0 1.332-7.257 3 3 0 0 0-3.758-3.848 5.25 5.25 0 0 0-10.233 2.33A4.502 4.502 0 0 0 2.25 15Z" />
