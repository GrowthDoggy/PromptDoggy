                <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="h-6 w-6 shrink-0 <%= active_link?(controllers: 'prompts') ? 'text-indigo-600' : 'text-gray-700 group-hover:text-indigo-600' %>">
