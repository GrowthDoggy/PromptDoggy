<% text_color_class ||= "text-white" %>

<header class="absolute inset-x-0 top-0 z-50" data-controller="dialog" data-action="click->dialog#backdropClose">
  <nav class="flex items-center justify-between p-6 lg:px-8" aria-label="Global">
    <div class="flex lg:flex-1">
      <a href="<%= root_path %>" class="-m-1.5 p-1.5">
        <span class="sr-only">PromptDoggy</span>
        <%= image_tag "PromptDoggy.svg", alt: "PromptDoggy's company logo",class: "h-8 w-auto" %>
      </a>
    </div>
    <div class="flex lg:hidden">
      <button type="button" class="-m-2.5 inline-flex items-center justify-center rounded-md p-2.5 text-gray-400" data-action="dialog#open">
        <span class="sr-only">Open main menu</span>
        <svg class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" aria-hidden="true">
          <path stroke-linecap="round" stroke-linejoin="round" d="M3.75 6.75h16.5M3.75 12h16.5m-16.5 5.25h16.5" />
        </svg>
      </button>
    </div>
    <div class="hidden lg:flex lg:gap-x-12 lg:justify-end">
      <%= link_to "Github", "https://github.com/PromptDoggy/PromptDoggy", class: "text-sm font-semibold leading-6 #{text_color_class}" %>
      <%= link_to "About Us", about_us_path, class: "text-sm font-semibold leading-6 #{text_color_class}" %>
      <% if logged_in? %>
        <a href="<%= projects_path %>" class="text-sm font-semibold leading-6 <%= text_color_class %>">Get started <span aria-hidden="true">&rarr;</span></a>
      <% else %>
        <a href="<%= login_path %>" class="text-sm font-semibold leading-6 <%= text_color_class %>">Log in <span aria-hidden="true">&rarr;</span></a>
      <% end %>
    </div>
  </nav>
  <!-- Mobile menu, show/hide based on menu open state. -->
  <dialog data-dialog-target="dialog">
    <div class="lg:hidden" role="dialog" aria-modal="true">
      <!-- Background backdrop, show/hide based on slide-over state. -->
      <div class="fixed inset-0 z-50"></div>
      <div class="fixed inset-y-0 right-0 z-50 w-full overflow-y-auto bg-white px-6 py-6 sm:max-w-sm sm:ring-1 sm:ring-gray-900/10">
        <div class="flex items-center justify-between">
          <a href="#" class="-m-1.5 p-1.5">
            <span class="sr-only">PromptDoggy</span>
            <%= image_tag "logo.svg", alt: "PromptDoggy's company logo",class: "h-8 w-auto" %>
          </a>
          <button type="button" class="-m-2.5 rounded-md p-2.5 text-gray-700" data-action="dialog#close">
            <span class="sr-only">Close menu</span>
            <svg class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" aria-hidden="true">
              <path stroke-linecap="round" stroke-linejoin="round" d="M6 18L18 6M6 6l12 12" />
            </svg>
          </button>
        </div>
        <div class="mt-6 flow-root">
          <div class="-my-6 divide-y divide-gray-500/10">
            <div class="space-y-2 py-6">
              <%= link_to "Github", "https://github.com/PromptDoggy/PromptDoggy", class: "-mx-3 block rounded-lg px-3 py-2 text-base font-semibold leading-7 text-gray-900 hover:bg-gray-50" %>
              <%= link_to "About Us", about_us_path, class: "-mx-3 block rounded-lg px-3 py-2 text-base font-semibold leading-7 text-gray-900 hover:bg-gray-50" %>
            </div>
            <div class="py-6">
              <% if logged_in? %>
                <%= link_to "Get started", projects_path, class: "-mx-3 block rounded-lg px-3 py-2.5 text-base font-semibold leading-7 text-gray-900 hover:bg-gray-50" %>
              <% else %>
                <%= link_to "Log in", login_path, class: "-mx-3 block rounded-lg px-3 py-2.5 text-base font-semibold leading-7 text-gray-900 hover:bg-gray-50" %>
              <% end %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </dialog>
</header>